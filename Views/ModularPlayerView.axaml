<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Nana.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
             xmlns:uvlc="using:Nana.Libs.LibVLCSharp.Avalonia.Unofficial"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Nana.Views.ModularPlayerView"
             x:DataType="vm:ModularPlayerViewModel">
  <StackPanel>
    <StackPanel Orientation="Horizontal">
      <Button Command="{Binding Play}">Play</Button>
      <Button Command="{Binding Pause}">Pause</Button>
      <Button Command="{Binding Stop}">Stop</Button>
      <RepeatButton Command="{Binding FastForward}">FastForward</RepeatButton>
      <RepeatButton Command="{Binding Rewind}">Rewind</RepeatButton>
    </StackPanel>
    <Panel MinHeight="400">
      <uvlc:VideoView MediaPlayer="{Binding MediaPlayer}" />
    </Panel>
  </StackPanel>
</UserControl>
